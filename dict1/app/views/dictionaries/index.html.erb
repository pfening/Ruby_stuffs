<h1>Listing dictionaries</h1>

<table>
  <thead>
    <tr>
      <th>Word en</th>
      <th>Word other</th>
      <th>Know</th>
      <th>Dont know</th>
      <th>Not sure</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dictionaries.each do |dictionary| %>
      <tr>
        <td><%= dictionary.word_en %></td>
        <td><%= dictionary.word_other %></td>
        <td><%= dictionary.know %></td>
        <td><%= dictionary.dont_know %></td>
        <td><%= dictionary.not_sure %></td>
        <td><%= link_to 'Show', dictionary %></td>
        <td><%= link_to 'Edit', edit_dictionary_path(dictionary) %></td>
        <td><%= link_to 'Destroy', dictionary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

