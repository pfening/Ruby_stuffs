("a".."z").each do |n| 
   puts n
end

(0..20).each do |$age|
puts $age

case $age
when 0 .. 2
    puts "baby"
when 3 .. 6
    puts "little child"
when 7 .. 12
    puts "child"
when 13 .. 18
    puts "youth"
else
    puts "adult"
end
end

for i in 1..5
   retry if  i > 3
   puts "Value of local variable is #{i}"
end
