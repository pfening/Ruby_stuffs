<table class="table table-striped">
  <thead>
    <tr>
      <th>Word a</th>
      <th>Word b</th>
      <th>Know</th>
      <th>Language</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.word_a %></td>
        <td><%= word.word_b %></td>
        <td><%= word.know %></td>
        <td><%= word.language_id %></td>
        <td><%= link_to 'Show', word, class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_word_path(word), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word', new_word_path, class: "btn btn-default" %>