<%= form_for(@word) do |f| %>
  <% if @word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
      <% @word.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-inline" role="form">
    <div class="form-group" >
	<div class="input-group">
      	<div class="input-group-addon"><%= @language.lang_a.titleize %></div>
 	<%= f.text_field :word_a, class: "form-control" %>
    	</div>
    </div>

    <div class="form-group" >
	<div class="input-group">
      	<div class="input-group-addon"><%= @language.lang_b.titleize %></div>
 	<%= f.text_field :word_b, class: "form-control" %>
    	</div>
    </div>
<br>
    <div class="checkbox" >
      	I <%= f.label :know %> it.
	<%= f.check_box :know, class: "checkbox-control" %>
    </div>

    <%= f.hidden_field :language_id %>

  <div class="actions">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>
</div>
